@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="args=>IncrementCount(10)">Click me</button>

@code {
    private int currentCount = 0;

    private void IncrementCount(int add)
    {
        currentCount += add;
    }
}
